<launch>
      <include file="$(find robot_bringup)/launch/robot_remote.launch"/>

  <node name="camera_left" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video2" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="camera_left_link" />
    <param name="io_method" value="mmap"/>
    <param name="camera_name" value="camera_left"/>
    <param name="framerate" value="30"/>
    <param name="focus_auto" value="false"/>
    <param name="camera_info_url" type="string" value="file://$(find robot_bringup)/launch/includes/camera_logitech.yaml"/>
  </node>

    <node name="camera_right" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video4" />
    <param name="image_width" value="640" />
    <param name="image_height" value="480" />
    <param name="pixel_format" value="yuyv" />
    <param name="camera_frame_id" value="camera_right_link" />
    <param name="io_method" value="mmap"/>
    <param name="camera_name" value="camera_right"/>
    <param name="framerate" value="30"/>
    <param name="focus_auto" value="false"/>
    
  </node>




</launch>
